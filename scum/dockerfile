# VERWENDE DEBIAN BULLSEYE (64-BIT)
FROM debian:bullseye-slim

ENV DEBIAN_FRONTEND=noninteractive
ENV WINEARCH=win64
ENV WINEPREFIX=/mnt/server/.wine

# --- SETUP ALS ROOT-BENUTZER ---

# Installiere notwendige Pakete
RUN dpkg --add-architecture i386 && \
    apt-get update && \
    apt-get install -y --no-install-recommends \
        wget \
        ca-certificates \
        tar \
        xz-utils \
        wine64 \
        lib32gcc-s1 && \
    rm -rf /var/lib/apt/lists/*

# Erstelle den non-root-Benutzer 'container' UND sein Home-Verzeichnis mit '-m'
RUN useradd --system -m --home /home/container --shell /bin/bash container

# Installiere SteamCMD
RUN mkdir -p /opt/steamcmd && \
    cd /opt/steamcmd && \
    wget -qO- https://steamcdn-a.akamaihd.net/client/installer/steamcmd_linux.tar.gz | tar xvz

# Erstelle die Verzeichnisse, die SteamCMD und der Server benötigen
# DIES IST DIE WICHTIGE HINZUFÜGUNG:
RUN mkdir -p /mnt/server /home/container/Steam && \
    chown -R container:container /home/container

# Kopiere das Startskript in den Container
COPY bin/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Setze die finalen Berechtigungen für alle wichtigen Ordner
RUN chown -R container:container /opt/steamcmd /mnt/server

# --- WECHSEL ZUM EINGESCHRÄNKTEN BENUTZER (GANZ ZUM SCHLUSS) ---

# Wechsle zum 'container' Benutzer
USER container

# Setze das finale Arbeitsverzeichnis
WORKDIR /mnt/server

# Definiere den Entrypoint
ENTRYPOINT ["/entrypoint.sh"]
