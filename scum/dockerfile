# ... (andere Befehle) ...

# --- SETUP ALS ROOT-BENUTZER ---
USER root

# Installiere Wine64 UND Winetricks
RUN apt-get update && \
    apt-get install -y --no-install-recommends wine64 winetricks && \
    rm -rf /var/lib/apt/lists/*

# ... (useradd, mkdir etc.) ...

# --- WECHSEL ZUM EINGESCHRÄNKTEN BENUTZER ---
USER container

# Führe Winetricks als der richtige Benutzer aus, um die Runtimes zu installieren
RUN winetricks -q vcrun2019 # Oder vcrun2022, je nach Fehler

WORKDIR /home/container/server
ENTRYPOINT ["/entrypoint.sh"]
